<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorActivityBackground</item>

    </style>

    <style name="HeadingTheme">
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TitleTheme">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/colorHighlightedText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleTheme">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="BodyTheme">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="OverLineTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/overline</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorSecondaryText</item>
    </style>
</resources>
